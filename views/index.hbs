<!-- Main Container -->
<div class="main-container">
    <!-- Section with background image -->
    <section class="bg-image text-white d-flex align-items-center">
        <div class="container text-center py-5">
            <h1>Lab Reservation System</h1>
            <p>Reserve labs with ease. Explore, book, and manage your academic needs.</p>
            {{#if user}}
                <a href="/profile" class="btn btn-light">Go to Profile</a>
                <a href="/logout" class="btn btn-outline-light"><i class="bi bi-box-arrow-right"></i> Logout</a>
            {{else}}
                <a href="/login" class="btn btn-light">Get Started!</a>
            {{/if}}
        </div>
    </section>

    <div class="container-fluid mt-4"> 
        <div class="row justify-content-center align-items-center">
            <!-- Dynamic Carousel Section -->
            {{#if laboratories.length}}
            <div class="carousel col-md-6 mb-4 d-flex">
                <div class="carousel w-100">
                    <div id="labCarousel" class="carousel slide">
                        <div class="carousel-indicators">
                            {{#each laboratories}}
                            <button type="button" data-bs-target="#labCarousel" data-bs-slide-to="{{@index}}" {{#if @first}}class="active"{{/if}}></button>
                            {{/each}}
                        </div>
                        <div class="carousel-inner">
                            {{#each laboratories}}
                            <div class="carousel-item {{#if @first}}active{{/if}}">
                                <img src="{{this.image}}" class="d-block w-100" alt="{{this.name}}">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>{{this.name}}</h5>
                                    <p>{{this.description}}</p>
                                    <small>Location: {{this.location}} | Capacity: {{this.capacity}} seats</small>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#labCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#labCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
            {{/if}}

            <!-- Info Section -->
            <div class="col-md-5 info d-flex justify-content-center align-items-center">
                <div class="info-text text-center">
                    <h1>Lab Reservation System</h1>
                    <p>Welcome to the Lab Reservation System. This system allows students to reserve laboratory equipment and facilities for their academic needs. Please navigate through the menu to explore available labs, make reservations, and manage your bookings.</p>
                </div>
            </div>
        </div>
    </div>
</div>
