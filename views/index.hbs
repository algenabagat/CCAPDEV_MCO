<!-- Main Container -->
<div class="main-container">
    <!-- Section with background image -->
    <section class="bg-image text-white d-flex align-items-center">
        <div class="container text-center py-5">
            <h1>Lab Reservation System</h1>
            <p>Reserve labs with ease. Explore, book, and manage your academic needs.</p>
            {{#if user}}
                <a href="/profile" class="btn btn-light">Go to Profile</a>
                <a href="/logout" class="btn btn-outline-light"><i class="bi bi-box-arrow-right"></i> Logout</a>
            {{else}}
                <a href="/login" class="btn btn-light">Get Started!</a>
            {{/if}}
        </div>
    </section>

    <div class="container-fluid mt-4"> 
        <div class="row justify-content-center align-items-center">
            <!-- Carousel Section -->
            <div class="carousel col-md-6 mb-4 d-flex">
                <div class="carousel w-100">
                    <div id="carouselExampleCaptions" class="carousel slide">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/img/gk3.jpg" class="d-block w-100" alt="dlsu">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>GK302A</h5>
                                    <p>A standard lab equipped with modern desktops for programming, typing, and basic software use. Best for coding, research, or online activities.</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="/img/gk404.jpeg" class="d-block w-100" alt="bron">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>GK404</h5>
                                    <p>Built for hands-on networking practice. Complete with routers, switches, and simulation tools like Cisco Packet Tracer.</p>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img src="/img/gk3.jpg" class="d-block w-100" alt="dlsu">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>GK302B</h5>
                                    <p>Set up for group classes and IT workshops. Includes 35 workstations with up-to-date software for web development and presentations.</p>
                                </div>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Info Section -->
            <div class="col-md-5 info d-flex justify-content-center align-items-center">
                <div class="info-text text-center">
                    <h1>Lab Reservation System</h1>
                    <p>Welcome to the Lab Reservation System. This system allows students to reserve laboratory equipment and facilities for their academic needs. Please navigate through the menu to explore available labs, make reservations, and manage your bookings.</p>
                </div>
            </div>
        </div>
    </div>
</div>
