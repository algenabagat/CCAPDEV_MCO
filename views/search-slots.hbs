<div class="main-container">
<div class="container mt-4">
    <div class="search-container">
        <h2 class="mb-4">Search Available Slots</h2>
        
        <form id="search-form">
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label for="lab-select" class="form-label">Laboratory</label>
                    <select class="form-select" id="lab-select" name="labId" required>
                        <option value="" selected disabled>Select a laboratory</option>
                        {{#each laboratories}}
                            <option value="{{this._id}}">{{this.name}} (Capacity: {{this.capacity}} seats)</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="date-input" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date-input" name="date" required 
                           min="{{formatDate today 'YYYY-MM-DD'}}" 
                           max="{{formatDate maxDate 'YYYY-MM-DD'}}">
                </div>

                <div class="col-md-4">
                    <label for="time-slot-select" class="form-label">Time Slot</label>
                    <select class="form-select" id="time-slot-select" name="timeSlot">
                        <option value="" selected>All Time Slots</option>
                        <option value="08:00-08:30">08:00 - 08:30</option>
                        <option value="08:30-09:00">08:30 - 09:00</option>
                        <option value="09:00-09:30">09:00 - 09:30</option>
                        <option value="09:30-10:00">09:30 - 10:00</option>
                        <option value="10:00-10:30">10:00 - 10:30</option>
                        <option value="10:30-11:00">10:30 - 11:00</option>
                        <option value="11:00-11:30">11:00 - 11:30</option>
                        <option value="11:30-12:00">11:30 - 12:00</option>
                        <option value="12:00-12:30">12:00 - 12:30</option>
                        <option value="12:30-13:00">12:30 - 13:00</option>
                        <option value="13:00-13:30">13:00 - 13:30</option>
                        <option value="13:30-14:00">13:30 - 14:00</option>
                        <option value="14:00-14:30">14:00 - 14:30</option>
                        <option value="14:30-15:00">14:30 - 15:00</option>
                        <option value="15:00-15:30">15:00 - 15:30</option>
                        <option value="15:30-16:00">15:30 - 16:00</option>
                        <option value="16:00-16:30">16:00 - 16:30</option>
                        <option value="16:30-17:00">16:30 - 17:00</option>
                        <option value="17:00-17:30">17:00 - 17:30</option>
                        <option value="17:30-18:00">17:30 - 18:00</option>
                    </select>
                </div>
                
            </div>
            
            <div class="text-center">
                <button type="submit" class="btn btn-success btn">
                    <i class="bi bi-search me-2"></i>Search Slots
                </button>
                <small class="d-block mt-2 text-muted">Showing availability for next 7 days</small>
            </div>
        </form>
        
        <div id="search-results" class="mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3 id="results-header" class="mb-0"></h3>
                <small id="last-updated" class="text-muted"></small>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Seat #</th>
                            <th>Time Slot</th>
                            <th>Status</th>
                            <th>Reserved By</th>
                        </tr>
                    </thead>
                    <tbody id="results-body">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Reservation Modal -->
<div class="modal fade" id="reservationModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservationModalLabel">Make Reservation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="reservation-form">
                    <input type="hidden" id="reservation-lab-id">
                    <input type="hidden" id="reservation-seat-number">
                    <input type="hidden" id="reservation-date">
                    <input type="hidden" id="reservation-start-time">
                    <input type="hidden" id="reservation-end-time">
                    
                    <div class="mb-3">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" id="reservation-anonymous">
                            Reserve anonymously (others won't see your name)
                        </label>
                    </div>
                    
                    {{#if (eq currentUser.role 'Technician')}}
                    <div class="mb-3">
                        <label for="reservation-type" class="form-label">Reservation Type</label>
                        <select class="form-select" id="reservation-type">
                            <option value="student">For Myself</option>
                            <option value="walkin">For Walk-in Student</option>
                            <option value="block">Block Slot</option>
                        </select>
                    </div>
                    <div class="mb-3" id="student-email-container" style="display: none;">
                        <label for="student-email" class="form-label">Student Email</label>
                        <input type="email" class="form-control" id="student-email" placeholder="Enter student's DLSU email">
                    </div>
                    {{/if}}
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            Confirm Reservation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>